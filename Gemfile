  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap'
  gem 'twitter-bootstrap-rails'
  gem 'jquery-rails'
  gem 'jquery-ui-rails'
  gem 'bootstrap-sass'
end


# To use pagination
gem 'will_paginate'
gem 'jslint_on_rails'
gem 'twitter', '~> 3.0.2'
gem 'colored'
gem 'sorcery'
gem 'heroku'

group :production do
  gem 'pg'
end


